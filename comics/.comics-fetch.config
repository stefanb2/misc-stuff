# HTTP configuration
http.retries   = 5
http.timeout   = 10
http.useragent = Mozilla/5.0 (X11; Fedora; Linux x86_64; rv:50.0) Gecko/20100101 Firefox/50.0

# e-book configuration
ebook.author   = Stefan Becker
ebook.filename = comics.epub
#ebook.filename = comics.mobi
ebook.profile  = kindle_oasis
#ebook.profile  = kindle_pw

# image conversion
image.options = -colorspace Gray
image.rotate  = -90
image.scale   = x1638
#image.scale   = x900
image.type    = png

# mail configuration
mail.from     = sender@domain.com
mail.to       = recipient@domain.com
mail.subject  = E-book: daily comics
mail.greeting = Here's your daily dosage
mail.type     = application/epub+zip
#mail.type     = application/x-mobipocket-ebook
mail.host     = smtp.gmail.com
mail.port     = 587
mail.timeout  = 30
mail.password = TopSecretPassword
